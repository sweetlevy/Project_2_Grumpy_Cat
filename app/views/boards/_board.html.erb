  <header>
  <h2><%= link_to @user.username, users_profiles_path(@user), remote: true %></h2>
  <h3 class="board-title" data-id=<%= @board.id %> ><%= @board.title %></h3>
  <span class="new-board">+ new board</span>
  <nav id="board-nav">
    <span class="sticky-button"><%= link_to "+ new sticky", new_sticky_path(:board_id => @board.id), remote:true%></span>
    <span class="category-button"><%= link_to "+ new category", new_category_path(:board_id => @board.id), remote:true %></span>
    <span class="collaborator-button"><%= link_to "+ new collaborator", users_search_path(:board_id => @board.id), remote:true%></span>
    <span id="search-form"><%= render 'boards/search' %></span>
    <span><%= link_to "- logout", logout_path%></span>
  </nav>
</header>

  <% case board.categories.length %>
  <% when 1 %>
    <% board.categories.each do |category| %>
      <section class='top-left-board'>
        <h3 class="container-name" data-id="<%= category.id %>"><%= category.title %></h3>
          <div id="sc1" class="sticky-container" data-id="<%= category.id %>">
          <% category.stickies.each do |sticky| %>
            <div class="sticky">
              <p data-id="<%= sticky.id %>"><%= sticky.title %></p>
              <p class="hidden-content"><%= sticky.content %></p>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
