<%= div_for(user) do %>
  <p class="user">
    <%= user.username %>
  </p>
  <p class="user">
    <%= user.name %>
  </p>
  <p class="user">
    <%= user.email %>
  </p>
  <ul>
    <% user.created_boards.each do |board| %>
    <%= link_to board.title, board_path(board), remote: true  %> |
    <%= (link_to 'Delete Board', board_path(board), remote: true, method: :delete) %>
    <% end %>
  </ul>
<% end %>
