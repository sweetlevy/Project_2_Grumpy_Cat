<div class="login">
<h2>Login</h2>
  <div class='login_fields'>
  <%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br>

    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>

    <%= submit_tag 'Log In' %>
    <% end %>
    <br>
  </div>

    <%= link_to 'Sign Up for an Account', new_user_path %>
</div>
